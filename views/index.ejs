  .jumbotron {
    margin-bottom: 0px;
    background-image: url("http://getwallpapers.com/wallpaper/full/c/2/b/233513.jpg");
    background-position: 0% 25%;
    background-size: cover;
    background-repeat: no-repeat;
    color: white;
    text-shadow: black 0.3em 0.3em 0.3em;
}
